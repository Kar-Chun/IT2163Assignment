@page
@model ASAssignment.Pages.LoginModel
@{
}

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Login </h1>
			<div asp-validation-summary="All" class="text-danger"></div>

			<form method="post" asp-antiforgery="true" id="loginForm">

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.Email">Email Address</label>
					<input type="Text" asp-for="LModel.Email" class="form-control" />
					<span asp-validation-for="LModel.Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.Password">Password</label>
					<input type="password" asp-for="LModel.Password" class="form-control" />
					<span asp-validation-for="LModel.Password" class="text-danger"></span>
				</div>

				<div class="mb-3 form-check">
					<input type="checkbox" asp-for="LModel.RememberMe" class="form-check-input" />
					<label class="form-check-label" asp-for="LModel.RememberMe">Remember Me?</label>
				</div>

				<div class="mb-3">
					<button id="btnLogin" type="submit" class="btn btn-primary">Login</button>
				</div>
				<input type="hidden" name="RecaptchaToken" id="RecaptchaToken" />
			</form>

		</div>
	</div>
</div>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />

	<script src="https://www.google.com/recaptcha/api.js?render=@Model.RecaptchaSiteKey"></script>

	<script>
		const form = document.getElementById("loginForm");
		const btn = document.getElementById("btnLogin");
		const tokenField = document.getElementById("RecaptchaToken");

		let submitting = false;

		form.addEventListener("submit", async function (e) {
		  if (submitting) return;
		  e.preventDefault();

		  submitting = true;
		  if (btn) btn.disabled = true;

		  try {
			// wait until grecaptcha is ready
			await new Promise(resolve => grecaptcha.ready(resolve));

			const token = await grecaptcha.execute("@Model.RecaptchaSiteKey", { action: "login" });
			tokenField.value = token;

			// native submit (doesn't re-trigger your handler)
			HTMLFormElement.prototype.submit.call(form);
		  } catch (err) {
			submitting = false;
			if (btn) btn.disabled = false;
			console.error(err);
			alert("Captcha failed. Please refresh and try again.");
		  }
		});
	</script>
}